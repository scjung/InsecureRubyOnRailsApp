<% provide(:title, @title) %>
<h1><%= @title %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: attack_path(90), method: :patch, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name do %>
          Input a user name:
        <% end %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'name' %>
        <span class="help-block">
          <p>Sample input: regular_user</p>
        </span>
        <span class="help-block">
          <p>Malicious input: regular_user)(cn=regular_user</p>
        </span>
      </div>

      <div class="checkbox">
        <%= f.label :defense do %>
          <%= f.check_box :defense %>
          Defense the attack
        <% end %>
      </div>

      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<% if @result %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= @result %>
    </div>
  </div>
<% end %>