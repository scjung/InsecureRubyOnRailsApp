<% provide(:title, @title) %>
<h1><%= @title %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: attack_path(326), method: :patch, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :text do %>
          Input a text to encrypt:
        <% end %>
        <%= f.text_field :text, class: 'form-control', placeholder: 'label' %>
      </div>
      <div class="form-group">
        <div class="radio">
          <%= f.label :length do %>
            <%= f.radio_button :length, 'short', checked: true %>
            Short key length (1024)
          <% end %>
        </div>
        <div class="radio disabled">
          <%= f.label :length do %>
            <%= f.radio_button :length, 'long' %>
            Long key length (2048)
          <% end %>
        </div>
      </div>
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<% if @enc %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4>Encrypted text (base64)</h4>
      <pre><%= @enc %></pre>
      <h4>Public key</h4>
      <pre><%= @key %></pre>
    </div>
  </div>
<% end %>