<% provide(:title, @title) %>
<h1><%= @title %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: attack_path(601), method: :patch, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :url do %>
          Redirection URL:
        <% end %>
        <%= f.text_field :url, class: 'form-control', placeholder: 'url' %>
        <span class="help-block">
          <p>Sample input: <%= attacks_path %></p>
        </span>
        <span class="help-block">
          <p>Malicious input: https://www.google.com </p>
        </span>
      </div>

      <div class="checkbox">
        <%= f.label :defense do %>
          <%= f.check_box :defense %>
          Defense the attack
        <% end %>
      </div>

      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
