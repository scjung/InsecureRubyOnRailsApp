<% provide(:title, 'Attack!') %>
<h1>Attack!</h1>

<div class="row">
<div class="col-9">
<% @cwes.each_with_index do |(id, name), i| %>
  <% if i % 2 == 0 %>
    <div class="row mb-4">
  <% end %>
  <div class="col-md-6">
    <%= link_to "CWE-#{id}: #{name}", edit_attack_path(id),
                class: 'btn btn-default btn-block btn-lg' %>
  </div>
  <% if i % 2 != 0 %>
    </div>
  <% end %>
<% end %>
<% if @cwes.count % 2 != 0 %>
  </div>
<% end %>
</div>
</div>